[user]
    ; set name and email in .env file
    ; name = "Firstname Lastname"
    ; email = "work@email.com"
[core]
    editor = nvim
    pager = delta
    excludesFile = ~/.gitignore
[branch]
    sort = committerdate
[credential]
    helper = cache
    ; wsl with credential manager installed on windows
    ; helper = /mnt/c/Users/<USERNAME>/scoop/apps/git/current/mingw64/bin/git-credential-manager.exe
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
[init]
    defaultBranch = master
[log]
    date = iso
[alias]
    st = status
    co = checkout
    ci = commit
    di = diff
    ds = diff --staged
    br = branch
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    last = log -1 HEAD --stat
[color]
    ui = true
[fetch]
    prune = true
[push]
    default = tracking
    autoSetupRemote = true
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/o a light background color (e.g. the default macOS terminal)
    side-by-side = true
    line-numbers = true
    plus-color = "#A9FF68"
    minus-color = "#F70067"
[diff]
    colorMoved = default
    algorithm = patience
[maintenance]
    auto = false
    strategy = incremental

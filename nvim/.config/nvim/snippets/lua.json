{
  "autocmd (Filetype)": {
    "prefix": "autocmd (FileType)",
    "body": [
      "vim.api.nvim_create_autocmd(\"FileType\", {",
      "\tpattern = \"${1:ft}\",",
      "\tcallback = function()",
      "\t\t$0",
      "\tend,",
      "})"
    ],
    "description": "Insert autocommand based on filetype"
  },

  "file exists": {
    "prefix": "file exists",
    "body": "local file_exists = vim.uv.fs_stat(\"${1:filepath}\") ~= nil"
    "description": "Insert test if file exists"
  }
}
